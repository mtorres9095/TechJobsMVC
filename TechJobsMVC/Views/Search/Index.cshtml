<div class="job-listing">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @if (ViewBag.columns != null)
            {
                @foreach (var column in ViewBag.columns)
                {
                    <span>
                        <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                        <label for="@column.Key">@column.Value</label>
                    </span>
                }
            }
        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th, td {
            padding: 5px;
            text-align: left;
        }
    </style>

    <table>

        @if (ViewBag.result != null)
        {
            @foreach (Job results in ViewBag.result)
            {
                <tr>
                    <th>ID</th>
                    <td>@results.Id</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>@results.Name</td>
                </tr>
                <tr>
                    <th>Employer</th>
                    <td>@results.Employer</td>
                </tr>
                <tr>
                    <th>Location</th>
                    <td>@results.Employer</td>
                </tr>
                <tr>
                    <th>Position Type</th>
                    <td>@results.PositionType</td>
                </tr>
                <tr>
                    <th>Skill</th>
                    <td>@results.CoreCompetency</td>
                </tr>



            }

        }

    </table>

</div>