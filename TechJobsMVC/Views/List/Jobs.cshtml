<div class="job-listing">

    <h1>@ViewBag.title</h1>


    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th, td {
            padding: 5px;
            text-align: left;
        }
    </style>

    <table class="job-listing">



        @foreach (Job job in ViewBag.jobs)
        {
            <tr>
                <th>ID</th>
                <td>@job.Id</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@job.Name</td>
            </tr>
            <tr>
                <th>Employer</th>
                <td>@job.Employer</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>@job.Employer</td>
            </tr>
            <tr>
                <th>Position Type</th>
                <td>@job.PositionType</td>
            </tr>
            <tr>
                <th>Skill</th>
                <td>@job.CoreCompetency</td>
                <hr />
            </tr>



         }
    </table>
</div>